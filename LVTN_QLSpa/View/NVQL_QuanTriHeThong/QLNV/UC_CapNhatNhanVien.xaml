                    <Border BorderBrush="Black" BorderThickness="0 0 0 0.1">
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Xóa"
                                            Margin="22 0 0 5">
                            </TextBlock>
                            <TextBlock Text="Chuyên môn"
                                               Margin="30 0 0 5">
